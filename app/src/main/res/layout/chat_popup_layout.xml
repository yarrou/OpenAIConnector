<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Favorite -->
    <LinearLayout
        android:id="@+id/favoriteContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_favorite_24"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/favoriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_window_favorites"/>
    </LinearLayout>

    <!-- Delete -->
    <LinearLayout
        android:id="@+id/deleteContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_delete_24"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/deleteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_window_delete"/>
    </LinearLayout>

    <!-- Share -->
    <LinearLayout
        android:id="@+id/shareContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_share_24"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/shareLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_window_share"/>
    </LinearLayout>

</LinearLayout>