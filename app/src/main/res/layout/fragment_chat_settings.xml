<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/paddingSmall"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/paddingSmall"
        android:text="@string/chat_settings_title"
        android:textSize="@dimen/subMenuTextSize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/paddingSmall"
        android:text="@string/name_text_size_settings"
        android:textSize="@dimen/smallTextSize" />

    <RadioGroup
        android:id="@+id/radioTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/paddingSmall">

        <RadioButton
            android:id="@+id/textSizeSmallRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/textSizeSmall"
            android:textSize="@dimen/smallTextSize" />

        <RadioButton
            android:id="@+id/textSizeNormalRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/textSizeNormal"
            android:textSize="@dimen/normalTextSize" />

        <RadioButton
            android:id="@+id/textSizeLargeRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/textSizeLarge"
            android:textSize="@dimen/bigTextSize" />
    </RadioGroup>

</LinearLayout>