<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="60dp"
    android:clipToPadding="false"
    android:clickable="false"
    >

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_message"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/my_message"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="false"
        android:longClickable="true"
        android:padding="10dp"
        android:text="Placeholder message"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/is_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_body"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        app:srcCompat="@drawable/baseline_favorite_16"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="1980-12-31 12:55" />

</RelativeLayout>